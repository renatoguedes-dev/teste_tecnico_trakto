{
  "compilerOptions": {
    "target": "ES2023",
    "module": "node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "types/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
